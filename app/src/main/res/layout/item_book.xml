<?xml version="1.0" encoding="utf-8"?>
<layout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  >

  <data>
    <variable name="item" type="com.blinkist.easylibrary.model.LocalBook" />
  </data>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/standard_margin"
    android:layout_marginTop="@dimen/half_standard_margin"
    android:layout_marginEnd="@dimen/standard_margin"
    android:layout_marginBottom="@dimen/half_standard_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/book_card_corner_radius"
    >

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

      <ImageView
        android:id="@+id/coverImageView"
        android:layout_width="@dimen/book_cover_image_width"
        android:layout_height="@dimen/book_cover_image_height"
        android:contentDescription="@string/library_item_image_description"
        android:scaleType="centerCrop"
        app:imageUrl="@{item.thumbnail}"
        tools:src="@drawable/ic_launcher_background"
        />

      <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/half_standard_margin"
        android:layout_toEndOf="@id/coverImageView"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@{item.title}"
        android:textSize="@dimen/book_title_text_size"
        android:textStyle="bold"
        tools:text="Clean Code"
        />

      <TextView
        android:id="@+id/authorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/half_standard_margin"
        android:layout_toEndOf="@id/coverImageView"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@{item.authors}"
        android:textSize="@dimen/book_authors_text_size"
        tools:text="Robert C. Martin"
        />

      <TextView
        android:id="@+id/publishedDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/authorsTextView"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginTop="@dimen/half_standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_toEndOf="@id/coverImageView"
        android:text="@{item.publishedDate}"
        android:textSize="@dimen/book_published_date_text_size"
        android:textStyle="italic"
        tools:text="2008-08-01"
        />

    </RelativeLayout>

  </androidx.cardview.widget.CardView>

</layout>
